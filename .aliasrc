fvim() {
    ffile=$(
        (
            [ -n "$1" ] && cd "$1"
            fzf
        )
    ) && echo $ffile 
    [ -n "$1" ] && ffile="$1/$ffile"
    [ -n "$ffile" ] && vim "$ffile"
}

fcd() {
    cd "$(dirname "$(fzf)")"
}

serve() {
    if [ $# -lt 2 ]; then
        echo "Usage: username password [mount] [port=2222]"
        return 1
    fi 

    user="$1"
    pass="$2"
    
    mountpoint="${3:-}"
    port="${4:-2222}"

    sudo docker run -v "$mountpoint":/home/foo/upload -p $port:22 -d atmoz/sftp $user:$pass
}

dockermounts() {
    (
        set -o pipefail
        sudo docker inspect $1 --format='{{json .Mounts}}' | jq || echo -e "\e[34mNo mounts\e[0m"
    )
}

